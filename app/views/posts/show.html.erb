<article class="post">
	<section class="post-head">
		<h1><%= @post.title %></h1>
		<time><%= @post.created_at.to_date.strftime("%d %B, %Y") %></time>
		<% if user_signed_in? && current_user.admin? %>
		<p><%= link_to 'Edit', edit_admin_post_path(@post) %>
		<%= link_to 'Delete', admin_post_path(@post), method: :delete, data: {confirm: 'Realy?'}%></p>
		<% end %>
	</section>
	<section class="post-body">
		<%= image_tag @post.image.url(:large), class: 'img-show' if @post.image? %>
		<p><%= @post.body %></p>
	</section>
</article>
<hr>
<h1>All comments :</h1>
<% @post.comments.each do |comment| %>
<p><strong><%= comment.username %>:</strong> <%= comment.body %><hr></p>
<% end %>
<h2>Add comments</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
<p>
	Name<br>
	<%= f.text_field(:username, {:class => 'form-cntrol'}) %>
</p>
<p>
	Text<br>
	<%= f.text_area(:body, {:class => 'form-cntrol'}) %>
</p>
<p>
	<%= f.submit 'Add comment' %>
</p>
  
<% end %>