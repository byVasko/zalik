
<% if @post.errors.any? %>
   <div class="alert alert-danger">
    <h5><%= t('common.errors') %></h5>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
   </div>
<% end %>

<%= form_for @post do |f| %>
  <div class="form-control">
  	<%= f.label :title %>
  	<%= f.text_field :title %>
  </div>

  <div class="form-control">
  	<%= f.label :bodye %>
  	<%= f.text_field :body %>
  </div>

  <div class="form-control">
  	<%= f.submit 'Save' %>
  </div>
<% end %>